{
  "environment": {
    "desc": "Leonardo HPC cluster.",
    "name": "leonardo",
    "slurm": true,
    "python_module": "python/3.11.6--gcc--8.5.0",
    "other_var": {
      "UCX_IB_SL": "1"
    },
    "partition": {
      "environment": "leonardo",
      "desc": "Boost partition with GPU nodes.",
      "name": "boost_usr_prod",
      "is_gpu": true,
      "cpus_per_node": 32,
      "sockets_per_node": 1,
      "gpus_per_node": 4,
      "qos": {
        "partition": "boost_usr_prod",
        "environment": "leonardo",
        "desc": "Default QOS for boost partition.",
        "name": "default",
        "is_required": false,
        "nodes_limit": {
          "min": 2,
          "max": 64
        },
        "time_limit": "24:00:00"
      }
    }
  },
  "test": {
    "compile_only": false,
    "debug_mode": false,
    "dry_run": false,
    "compress": true,
    "delete": true,
    "number_of_nodes": 4,
    "output_level": "statistics",
    "dimensions": {
      "dtype": "int32",
      "sizes_bytes": [
        32,
        256,
        2048,
        16384,
        131072,
        1048576,
        8388608,
        67108864,
        536870912
      ],
      "sizes_elements": [
        8,
        64,
        512,
        4096,
        32768,
        262144,
        2097152,
        16777216,
        134217728
      ],
      "segsizes_bytes": [
        16384,
        131072,
        1048576
      ]
    },
    "test_time": "01:00:00"
  },
  "libraries": [
    {
      "name": "Open MPI 4.1.6",
      "desc": "An open source Message Passing Interface implementation.",
      "tests": {
        "cpu": [
          1
        ]
      },
      "standard": "MPI",
      "lib_type": "Open-MPI",
      "version": "4.1.6",
      "compiler": "mpicc",
      "gpu_support": {
        "gpu": true,
        "gpu_load": {
          "type": "module",
          "module": "cuda/12.1"
        }
      },
      "lib_load": {
        "type": "module",
        "module": "openmpi/4.1.6--gcc--12.2.0"
      },
      "pico_backend": false,
      "algorithms": {
        "allreduce": [
          {
            "name": "recursive_doubling_ompi",
            "coll": "allreduce",
            "desc": "Open MPI recursive doubling algorithm.",
            "version": "4.1.5",
            "selection": 3,
            "tags": [
              "recursive_doubling"
            ]
          },
          {
            "name": "ring_ompi",
            "coll": "allreduce",
            "desc": "Open MPI ring algorithm. Not to be used if 'count'<'comm_sz'. If invoked on 'count'<'comm_sz' fallbacks to 'recursive_doubling'.",
            "version": "4.1.5",
            "selection": 4,
            "constraints": [
              {
                "key": "count",
                "conditions": [
                  {
                    "operator": ">=",
                    "value": "comm_sz"
                  }
                ]
              }
            ],
            "tags": [
              "ring"
            ]
          },
          {
            "name": "rabenseifner_ompi",
            "coll": "allreduce",
            "desc": "Open MPI Rabenseifner algorithm. Not to be used if 'count'<'comm_sz'. Not to be used if 'op' is not commutative. If used on not commutative 'op' fallback to 'OMPI_LINEAR'.",
            "version": "4.1.5",
            "selection": 6,
            "constraints": [
              {
                "key": "count",
                "conditions": [
                  {
                    "operator": ">=",
                    "value": "comm_sz"
                  }
                ]
              }
            ],
            "tags": [
              "rabenseifner"
            ]
          }
        ]
      }
    },
    {
      "name": "Open MPI NVHPC 23.11",
      "desc": "Open MPI implementation of NVIDIA HPC SDK.",
      "tests": {
        "cpu": [
          1
        ]
      },
      "standard": "MPI",
      "lib_type": "Open-MPI",
      "version": "4.1.6",
      "compiler": "nvc",
      "gpu_support": {
        "gpu": true,
        "gpu_load": {
          "type": "default"
        }
      },
      "lib_load": {
        "type": "module",
        "module": "openmpi/4.1.6--nvhpc--23.11"
      },
      "pico_backend": false,
      "algorithms": {
        "allreduce": [
          {
            "name": "recursive_doubling_ompi",
            "coll": "allreduce",
            "desc": "Open MPI recursive doubling algorithm.",
            "version": "4.1.5",
            "selection": 3,
            "tags": [
              "recursive_doubling"
            ]
          },
          {
            "name": "ring_ompi",
            "coll": "allreduce",
            "desc": "Open MPI ring algorithm. Not to be used if 'count'<'comm_sz'. If invoked on 'count'<'comm_sz' fallbacks to 'recursive_doubling'.",
            "version": "4.1.5",
            "selection": 4,
            "constraints": [
              {
                "key": "count",
                "conditions": [
                  {
                    "operator": ">=",
                    "value": "comm_sz"
                  }
                ]
              }
            ],
            "tags": [
              "ring"
            ]
          },
          {
            "name": "rabenseifner_ompi",
            "coll": "allreduce",
            "desc": "Open MPI Rabenseifner algorithm. Not to be used if 'count'<'comm_sz'. Not to be used if 'op' is not commutative. If used on not commutative 'op' fallback to 'OMPI_LINEAR'.",
            "version": "4.1.5",
            "selection": 6,
            "constraints": [
              {
                "key": "count",
                "conditions": [
                  {
                    "operator": ">=",
                    "value": "comm_sz"
                  }
                ]
              }
            ],
            "tags": [
              "rabenseifner"
            ]
          }
        ]
      }
    }
  ]
}