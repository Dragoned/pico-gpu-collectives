{
  "environment": {
    "desc": "Saverio's laptop.",
    "name": "local",
    "slurm": false
  },
  "test": {
    "compile_only": false,
    "debug_mode": false,
    "dry_run": false,
    "compress": true,
    "delete": true,
    "number_of_nodes": 1,
    "output_level": "statistics",
    "dimensions": {
      "dtype": "int32",
      "sizes_bytes": [
        32,
        256,
        2048,
        16384,
        131072,
        1048576,
        8388608,
        67108864,
        536870912
      ],
      "sizes_elements": [
        8,
        64,
        512,
        4096,
        32768,
        262144,
        2097152,
        16777216,
        134217728
      ],
      "segsizes_bytes": [
        16384,
        131072,
        1048576
      ]
    }
  },
  "libraries": [
    {
      "name": "Open MPI",
      "desc": "System's default Open MPI installation",
      "tests": {
        "cpu": [
          4
        ]
      },
      "standard": "MPI",
      "lib_type": "Open-MPI",
      "version": "5.0.7",
      "compiler": "mpicc",
      "gpu_support": {
        "gpu": false
      },
      "lib_load": {
        "type": "default"
      },
      "pico_backend": false,
      "algorithms": {
        "allreduce": [
          {
            "name": "default_ompi",
            "coll": "allreduce",
            "desc": "Open MPI default algorithm selection",
            "version": "4.1.5",
            "selection": 0,
            "tags": [
              "default"
            ]
          },
          {
            "name": "recursive_doubling_ompi",
            "coll": "allreduce",
            "desc": "Open MPI recursive doubling algorithm.",
            "version": "4.1.5",
            "selection": 3,
            "tags": [
              "recursive_doubling"
            ]
          },
          {
            "name": "ring_ompi",
            "coll": "allreduce",
            "desc": "Open MPI ring algorithm. Not to be used if 'count'<'comm_sz'. If invoked on 'count'<'comm_sz' fallbacks to 'recursive_doubling'.",
            "version": "4.1.5",
            "selection": 4,
            "constraints": [
              {
                "key": "count",
                "conditions": [
                  {
                    "operator": ">=",
                    "value": "comm_sz"
                  }
                ]
              }
            ],
            "tags": [
              "ring"
            ]
          }
        ]
      }
    },
    {
      "name": "MPICH",
      "desc": "Custom MPICH installation.",
      "tests": {
        "cpu": [
          4
        ]
      },
      "standard": "MPI",
      "lib_type": "MPICH",
      "version": "4.3.0",
      "compiler": "mpicc",
      "gpu_support": {
        "gpu": false
      },
      "lib_load": {
        "type": "set_env",
        "env_var": {
          "PATH": "/opt/mpich-test/bin:$PATH",
          "LD_LIBRARY_PATH": "/opt/mpich-test/lib:$LD_LIBRARY_PATH",
          "MANPATH": "/opt/mpich-test/share:$MANPATH"
        }
      },
      "pico_backend": false,
      "algorithms": {
        "allreduce": [
          {
            "name": "default_mpich",
            "coll": "allreduce",
            "desc": "MPICH default algorithm selection",
            "version": "4.3.0",
            "selection": "auto",
            "tags": [
              "default"
            ]
          },
          {
            "name": "smp_mpich",
            "coll": "allreduce",
            "desc": "MPICH SMP algorithm.",
            "version": "4.3.0",
            "selection": "smp",
            "tags": [
              "smp"
            ]
          },
          {
            "name": "recursive_doubling_mpich",
            "coll": "allreduce",
            "desc": "MPICH recursive doubling algorithm.",
            "version": "4.3.0",
            "selection": "recursive_doubling",
            "tags": [
              "recursive_doubling"
            ]
          }
        ]
      }
    }
  ]
}