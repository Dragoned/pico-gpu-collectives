{
  "environment": {
    "desc": "Leonardo HPC cluster.",
    "name": "leonardo",
    "slurm": true,
    "python_module": "python/3.11.6--gcc--8.5.0",
    "other_var": {
      "UCX_IB_SL": "1"
    },
    "partition": {
      "environment": "leonardo",
      "desc": "Boost partition with GPU nodes.",
      "name": "boost_usr_prod",
      "is_gpu": true,
      "cpus_per_node": 32,
      "sockets_per_node": 1,
      "gpus_per_node": 4,
      "qos": {
        "partition": "boost_usr_prod",
        "environment": "leonardo",
        "desc": "Default QOS for boost partition.",
        "name": "default",
        "is_required": false,
        "nodes_limit": {
          "min": 2,
          "max": 64
        },
        "time_limit": "24:00:00"
      }
    }
  },
  "test": {
    "compile_only": false,
    "debug_mode": false,
    "dry_run": false,
    "compress": true,
    "delete": true,
    "number_of_nodes": 2,
    "output_level": "statistics",
    "dimensions": {
      "dtype": "int32",
      "sizes_bytes": [
        32,
        256,
        2048,
        16384,
        131072,
        1048576,
        8388608,
        67108864,
        536870912
      ],
      "sizes_elements": [
        8,
        64,
        512,
        4096,
        32768,
        262144,
        2097152,
        16777216,
        134217728
      ],
      "segsizes_bytes": [
        16384,
        131072,
        1048576
      ]
    },
    "test_time": "00:02:00"
  },
  "libraries": [
    {
      "name": "Open MPI 4.1.6",
      "desc": "An open source Message Passing Interface implementation.",
      "tests": {
        "cpu": [
          4
        ],
        "gpu": [
          4
        ]
      },
      "standard": "MPI",
      "lib_type": "Open-MPI",
      "version": "4.1.6",
      "compiler": "mpicc",
      "gpu_support": {
        "gpu": true,
        "gpu_load": {
          "type": "module",
          "module": "cuda/12.1"
        }
      },
      "lib_load": {
        "type": "module",
        "module": "openmpi/4.1.6--gcc--12.2.0"
      },
      "pico_backend": true,
      "algorithms": {
        "allgather": [
          {
            "name": "recursivedoubling_hierarchy_over",
            "coll": "allgather",
            "desc": "libpico external recursive doubling algorithm. Use hierarchi condivision schemas",
            "version": "1.0.0",
            "selection": "pico",
            "constraints": [
              {
                "key": "count",
                "conditions": [
                  {
                    "operator": ">=",
                    "value": "comm_sz"
                  }
                ]
              },
              {
                "key": "comm_sz",
                "conditions": [
                  {
                    "operator": "is_power_of_two",
                    "value": true
                  }
                ]
              }
            ],
            "tags": [
              "recursive_doubling",
              "cuda",
              "external"
            ]
          }
        ]
      }
    }
  ]
}